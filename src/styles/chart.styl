@import 'nib';
@import './variables.styl';

li {
    list-style: none;
}

.chart-container {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    margin: 20px 0;
    height: 300px;
    gap: 10px;
    align-items: flex-end;

    @media screen and (min-width: 450px) {
        gap: 12px;
    }
}

.chart-container-inner {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    justify-content: flex-end;
}

.chart-container-bar {
    width: 100%;
    background: $Soft-red;
    border-radius: 6px;
    cursor: pointer;
    transition: all 150ms ease;

    &:hover {
        background: hsla($Soft-red, 0.5);
    }
}

.chart-container-bar-label {
    padding-top: 7px;
}

.chart-container-bar-max {
    background: $Cyan;
    transition: all 150ms ease;

    &:hover {
        background: hsla($Cyan, 0.5);
    }
}

.chart-container-inner-item {
    background: $Dark-brown;
    color: $Very-pale-orange;
    margin: 7px 0;
    position: absolute;
    padding: 7px;
    display: none;
    border-radius: 7px;
    font-weight: bold;
    letter-spacing: 0.5px;
}

.chart-container-inner-item-active {
    display: block;
}